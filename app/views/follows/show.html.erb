<div class="page-header">
  <h3>Follow #<%= @follow.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Follower</dt>
      <dd>
        <% if @follow.follower.present? %>
          <a href="/users/<%= @follow.follower_id %>">
            <%= @follow.follower.email %>
          </a>
        <% end %>
      </dd>

      <dt>Following</dt>
      <dd>
        <% if @follow.following.present? %>
          <a href="/users/<%= @follow.following_id %>">
            <%= @follow.following.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/follows" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @follow.follower %>
        <a href="/follows/<%= @follow.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_follow/<%= @follow.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
